<p id="notice"><%= notice %></p>

<div class='row'>
  <div class="col-md-6">
    <%= image_tag(@product.image, class: 'center-block') %>
  </div>
  <div class="col-md-6">
    <h1>
      <%= @product.name %>
    </h1>
    <div class='row'>
      <div class="col-md-12">
        <div class='btn-group'>
          <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-info' %>
          <%= link_to 'Back', edit_product_path(@product), class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
</div>

